datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())
  tuid Int @unique
  firstName String
  lastName String
  fullName String
  tuEmail String @unique
  isAdmin Boolean @default(false)
  isCoordinator Boolean @default(false)
  isFaculty Boolean @default(false)
  isStaff Boolean @default(false)

  courses Course[]
}

model Course {
  id String @id @default(uuid())
  department String
  courseNum Int
  section Int
  crn Int
  title String
  classType String
  roomNum Int
  hasSecuredRoom Boolean
  days String
  time String
  semester String
  year Int
  credits Int

  userId String
  instrcutor User @relation(fields: [userId], references: [id], onDelete: Cascade)

  isNewInstrcutor Boolean
  specialInfo String? @db.Text
  notes String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])

  @@unique(fields: [department, courseNum, section, semester, year], name: "course_identifier")
}